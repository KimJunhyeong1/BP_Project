<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">

        <TextView
            android:text="정보입력"
            android:textColor="#5DA4BE"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="이름"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/tv_name"
            android:hint="실명을 입력하세요."
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="성별"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/SexRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="남자" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="여자" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="휴대전화"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/tv_phone"
            android:hint="' - '없이 입력하세요."
            android:ems="20"
            android:inputType="textPhonetic"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:text="지역"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/City_Spinner"
            android:entries="@array/지역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="당신은?"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/User_Kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Native"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="현지인" />

            <RadioButton
                android:id="@+id/Traveler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="여행자" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/CheckButton"
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5DA4BE"
            android:layout_marginRight="10dp" />
        <Button
            android:id="@+id/bt_join_cancel"
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5DA4BE"/>
    </LinearLayout>



</LinearLayout>
