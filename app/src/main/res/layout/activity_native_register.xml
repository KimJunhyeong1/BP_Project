<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현지인 등록"
            android:textSize="25dp"
            android:textColor="#5DA4BE"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="별명" />

        <EditText
            android:id="@+id/native_confirm"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="#E7E6E6"
            android:gravity="center"
            android:hint="앞에서 설정한 이름 고정" />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="지역" />

        <Spinner
            android:id="@+id/native_spinner"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:background="#E7E6E6"
            android:entries="@array/현지인지역구"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:padding="8dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="해시태그" />

        <EditText
            android:id="@+id/hash_tag"
            android:layout_width="300dp"
            android:layout_height="115dp"
            android:background="#E7E6E6"
            android:gravity="center"
            android:hint="여행테마를 #해시태그로 나타내세요!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:padding="8dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="현지인 소개" />

        <EditText
            android:id="@+id/tv_information"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="#E7E6E6"
            android:gravity="center"
            android:hint="자신만의 소개를 해주세요!" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="등록하기"
        android:textSize="17dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp"/>
</LinearLayout>